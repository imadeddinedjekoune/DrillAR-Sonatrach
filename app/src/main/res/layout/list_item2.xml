<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="2dp"
    android:background="@drawable/shape"
    android:layout_marginStart="2dp"
    android:layout_marginTop="2dp"
    android:layout_marginEnd="2dp"

    >

    <ImageView
        android:id="@+id/image"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:paddingTop="30dp"

        android:src="@drawable/mud_mixing"
        />
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:id="@+id/text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mud Mixing"
            android:paddingRight="10dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="24sp"/>

    <TextView
        android:id="@+id/text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Le mélange de boue est le processus de préparation de la boue de forage en mélangeant divers additifs et fluides pour obtenir les propriétés nécessaires à la performance optimale du forage."
        android:paddingRight="10dp"
        android:paddingTop="5dp"
        android:textColor="@color/black"/>

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="  Voir en AR     "
        android:layout_gravity="end"
        android:shadowRadius="30"
        android:elevation="6dp"
        android:textColor="@color/black"
        android:background="@drawable/btn_custum"
        android:layout_marginStart="24dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="24dp"/>
    </LinearLayout>

</LinearLayout>